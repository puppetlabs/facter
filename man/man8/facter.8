  sda => {
    model => "Virtual disk",
    size => "8\.00 GiB",
    size_bytes => 8589934592,
    vendor => "ExampleVendor"
  }
}
dmi => {
  bios => {
    release_date => "06/23/2013",
    vendor => "Example Vendor",
    version => "6\.00"
  }
}
[\e\.\e\.\e\.]
.
.fi
