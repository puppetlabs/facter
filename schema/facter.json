            }
        },
        "physicalprocessorcount" : { "type": "integer" },
        "processorcount" : { "type": "integer" },
        "processor" : { "type": "string" },
        "processors" : { "type": "object",
          "properties": {
            "models" : { "type": "array" },
            "count" : { "type": "integer" },
            "physicalcount" : { "type": "integer" },
            "speed" : { "type": "string" }
          }
        },
        "productname" : { "type": "string" },
        "ps" : { "type": "string" },
        "puppetversion" : { "type": "string" },
        "rubyplatform" : { "type": "string" },
        "rubysitedir" : { "type": "string" },
        "rubyversion" : { "type": "string" },
        "selinux" : { "type": "boolean" },
        "selinux_config_mode" : { "type": "string" },
        "selinux_config_policy" : { "type": "string" },
        "selinux_current_mode" : { "type": "string" },
