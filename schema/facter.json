          "properties": {
            "name" : { "type": "string" },
            "family" : { "type": "string" },
            "release" : { "type": "object",
              "properties": {
                "major" : { "type": "string" },
                "minor" : { "type": "string" },
                "full" : { "type": "string" }
              }
            },
            "lsb" : { "type": "object",
