{
    "$schema":     "http://json-schema.org/draft-04/schema#",
    "title":       "Facter built-in facts",
    "description": "All the built-in facts for facter cross-platform",
    "type":        "object",
    "additionalProperties": false,
    "definitions": {
         "ipaddress" : {
             "type": "string",
             "pattern" : "^((25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?)\\.){3}(25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?)$"
         },
        "macaddress" : {
            "type": "string",
            "pattern" : "^(([0-9a-fA-F]){2}\\:){5}([0-9a-fA-F]){2}$"
        }
    },
    "patternProperties": {
        "^blockdevice_[A-Za-z0-9]+_size$" : { "type": "integer" },
        "^blockdevice_[A-Za-z0-9]+_vendor$" : { "type": "string" },
        "^blockdevice_[A-Za-z0-9]+_model$" : { "type": "string" },
        "^mtu_[A-Za-z0-9_]+$" : { "type": "integer" },
        "^netmask_[A-Za-z0-9_]+$" : { "$ref" : "#/definitions/ipaddress" },
        "^network_[A-Za-z0-9_]+$" : { "$ref" : "#/definitions/ipaddress" },
        "^ipaddress_[A-Za-z0-9_]+$" : { "$ref" : "#/definitions/ipaddress" },
        "^ipaddress6_[A-Za-z0-9_]+$" : { "type": "string" },
        "^macaddress_[A-Za-z0-9_]+$" : { "$ref" : "#/definitions/macaddress" },
        "^processor[0-9]+" : { "type": "string" }
    },
    "properties": {
        "architecture" : { "type": "string" },
        "activeprocessorcount" : { "type": "integer" },
        "augeasversion" : { "type": "string" },
        "bios_release_date" : { "type": "string" },
        "bios_vendor" : { "type": "string" },
        "bios_version" : { "type": "string" },
        "blockdevices" : { "type": "string" },
        "boardmanufacturer" : { "type": "string" },
        "boardproductname" : { "type": "string" },
        "boardserialnumber" : { "type": "string" },
        "cfkey" : { "type": "string" },
        "dhcp_servers" : { "type": "object",
            "patternProperties": {
                "^[A-Za-z0-9_]+$" : { "$ref" : "#/definitions/ipaddress" }
            }
        },
        "domain" : { "type": "string" },
        "facterversion" : { "type": "string" },
        "filesystems" : { "type": "string" },
        "fqdn" : { "type": "string" },
